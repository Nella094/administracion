
@model IEnumerable<GroupA.Dominio.Proyecto>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center letraFormal">Proyectos</h2>

<button class="btn btn-default active">
    <b class="letraFormal">
        @Html.ActionLink("Crear Nuevo Proyecto", "Create")
        <span class="iconify" data-icon="fa:plus-square" data-inline="false" style="color: green;"></span>
    </b>

</button>
<br />
<br />
<table class="table table-responsive">
    <tr class="letraFormal">
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                <buttom class="btn btn-default active">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) <span class="iconify" data-icon="fa:edit" data-inline="false"></span>
                </buttom>
                <buttom class="btn btn-info active">
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) <span class="iconify" data-icon="fa:info-circle" data-inline="false"></span>
                </buttom>
                <buttom class="btn btn-danger active">
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }) <span class="iconify" data-icon="fa:trash-o" data-inline="false"></span>
                </buttom>
                <button class="btn btn-success active">
                    @Html.ActionLink("Agregar Empleado", "AgregarEmpleados", new { id = item.Id})
                </button>
</td>
        </tr>
    }

</table>

@section Scripts{

    <script src="https://code.iconify.design/1/1.0.3/iconify.min.js"></script>

}

<link href="~/Content/FondosParaLetras.css" rel="stylesheet" />